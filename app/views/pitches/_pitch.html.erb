            <div class="row">
            			<div class="col-md-12">
            <div class="conten">
            	<div class="container-fluid">
			<%= smart_listing_controls_for(:pitches, {class: "form-inline text-right"}) do %>
		<div class="f">
			<%= text_field_tag :filter, '', class: "search", placeholder: "Search results here", autocomplete: "on" %>
		</div>
		<% end %>
					<table class="table table-hover table-striped">
						<thead>
							<tr>
								<th>Pitch name</th>
								<th>Pitch Date</th>
								<th>Author</th>
								<th>Company name</th>
								<th>Sector name</th>
								<th>Subsector name</th>
								<th colspan="6"></th>
							</tr>
						</thead>
						<tbody>
							<%unless smart_listing.empty? %><%smart_listing.collection.each do |pitch| %>
							<tr>
								<td><%= link_to pitch.pitch_name, pitch %></td>
								<td><%= pitch.pitch_date %></td>
								<td><%= pitch.author %></td>
								<td><%= pitch.company_name %></td>
								<td><%= pitch.sector_name %></td>
								<td><%= pitch.subsector_name %></td>
								<td><%= link_to 'Show', pitch %></td>
								<td><%= link_to 'Edit', edit_pitch_path(pitch) %></td>
								<td><%= link_to 'Destroy', pitch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr><%end %>
						</tbody>
					</table> 
			
				<%= link_to 'New Pitch', new_pitch_path, class:"btn btn-info btn-fill pull-left"  %> 
