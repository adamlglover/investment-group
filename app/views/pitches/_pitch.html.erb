<p id="notice"><%= notice %></p>


<%= smart_listing_controls_for(:pitches, {class: "form-inline text-right"}) do %>
  <div class="filter input-append">
    <%= text_field_tag :filter, '', class: "search", placeholder: "Filter results here", autocomplete: "off" %>  
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Pitch name</th>
      <th>Pitch Date</th>
      <th>Author</th>
      <th>Company name</th>
      <th>Sector name</th>
      <th>Subsector name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless smart_listing.empty? %>
        <% smart_listing.collection.each do |pitch| %>
     
      <tr>
        <td><%= link_to pitch.pitch_name, pitch %></td>
        <td><%= pitch.pitch_date %></td>
        <td><%= pitch.author %></td>
        <td><%= pitch.company_name %></td>
        <td><%= pitch.sector_name %></td>
        <td><%= pitch.subsector_name %></td>
        <td><%= link_to 'Show', pitch %></td>
        <td><%= link_to 'Edit', edit_pitch_path(pitch) %></td>
        <td><%= link_to 'Destroy', pitch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= smart_listing.paginate %>
<%= smart_listing.pagination_per_page_links %>
<% else %>
  <p class="warning">No records!</p>
<% end %>
<br />
<%= link_to 'New Pitch', new_pitch_path %>