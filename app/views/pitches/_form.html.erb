<%= form_for(@pitch, :html => { multipart: true }) do |f| %>
  <% if @pitch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pitch.errors.count, "error") %> prohibited this pitch from being saved:</h2>

      <ul>
      <% @pitch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :pitch_name %><br>
    <%= f.text_field :pitch_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pitch_date %><br>
    <%= f.date_field :pitch_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :sector_name %><br>
    <%= f.collection_select(:sector_name, Sector.all, :sector_name, :sector_name, :prompt => true) %>
  </div>
  <div class="field">
    <%= f.label :subsector_name %><br>
    <%= f.text_field :subsector_name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :document %><br>
    <%= f.file_field :document %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
